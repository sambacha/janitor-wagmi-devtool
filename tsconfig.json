{
  "include": [".plasmo/**/*", "./**/*.ts", "./**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "src/**/*.test.ts",
    "src/views/**"
  ],
  "compilerOptions": {
    "paths": {
      "~*": ["./*"]
    },
    "baseUrl": ".",
    "allowUnreachableCode": false,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "module": "ES2020",
    "jsx": "react",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "dom"
    ]
  },
}
